<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            type="com.shahinbasahr.room.ui.fragment.main.viewmodel.MainViewModel"
            name="viewmodel" />

    </data>

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.main.view.MainFragment">

        <Button
            android:id="@+id/btnInputFragmentMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input"
            android:onClick="@{viewmodel::goToInput}"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnOutputFragmentMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
    </LinearLayout>
</layout>